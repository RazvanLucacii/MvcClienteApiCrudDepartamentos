@model IEnumerable<MvcClienteApiCrudDepartamentos.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { idDepartamento =item.IdDepartamento }, new{@class="btn btn-success"}) |
                @Html.ActionLink("Edit", "Edit", new { idDepartamento =item.IdDepartamento }, new{@class="btn btn-warning"}) |
                @Html.ActionLink("Delete", "Delete", new { idDepartamento = item.IdDepartamento }, new { @class = "btn btn-danger" })
                
            </td>
        </tr>
}
    </tbody>
</table>
